{
    "schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "js/natural_earth_maps/ne_10m_ocean.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_ocean"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "js/natural_earth_maps/ne_110m_graticules_30.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "js/natural_earth_maps/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "data/world_hair_trade_data.csv"
                        },
                        "key": "ReporterDesc",
                        "fields": [
                            "Qty"
                        ]
                    }
                },
                {
                    "calculate": "datum.Qty + 1", "as": "Quantity"
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "black",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "Quantity",
                    "type": "quantitative",
                    "title": "Total Hair Exports (kg)",
                    "scale": {
                        "type": "log",
                        "scheme": "purplered"
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Qty",
                        "type": "quantitative",
                        "title": "Weight kg"
                    }
                ]
            }
        }
    ]
    
}